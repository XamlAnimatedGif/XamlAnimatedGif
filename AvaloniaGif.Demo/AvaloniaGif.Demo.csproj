<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>
  <ItemGroup>
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <EmbeddedResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </EmbeddedResource>
    <EmbeddedResource Include="**\*.gif"/>
    <EmbeddedResource Include="Assets\*" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.7.1-build1021-beta" />
    <PackageReference Include="Avalonia.Desktop" Version="0.7.1-build1021-beta" />
    <PackageReference Include="Avalonia.ReactiveUI" Version="0.7.1-build1021-beta" />
    <ProjectReference Include="..\AvaloniaGif\AvaloniaGif.csproj"/>
  </ItemGroup>
</Project>