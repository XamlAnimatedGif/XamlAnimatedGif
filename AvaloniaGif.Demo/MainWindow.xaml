<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gif="clr-namespace:AvaloniaGif;assembly=AvaloniaGif"
        Title="GIFs on Avalonia!" Height="480" Width="680" Background="White">

    <StackPanel Orientation="Horizontal">
        <Image Stretch="None" gif:GifImage.SourceUri="{Binding CurrentGif}"/>
        <ListBox SelectedItem="{Binding SelectedGif}" Items="{Binding AvailableGifs}"/>
        <Button Content="Display" Command="{Binding DisplaySelectedGif}"/>
    </StackPanel>

</Window>
